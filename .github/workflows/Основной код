import requests
import time
from utils import get_temp_email, get_sms_code, generate_random_name
from config import SERVICES, PROXIES

def register_service(service_name):
    """–ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∞—è —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è –∞–∫–∫–∞—É–Ω—Ç–∞ –≤ —Å–µ—Ä–≤–∏—Å–µ"""
    
    if service_name not in SERVICES:
        print(f"‚ùå –°–µ—Ä–≤–∏—Å {service_name} –Ω–µ –ø–æ–¥–¥–µ—Ä–∂–∏–≤–∞–µ—Ç—Å—è.")
        return
    
    print(f"üöÄ –ù–∞—á–∏–Ω–∞—é —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—é –≤ {service_name}...")

    # 1. –ì–µ–Ω–µ—Ä–∏—Ä—É–µ–º –≤—Ä–µ–º–µ–Ω–Ω—É—é –ø–æ—á—Ç—É
    email = get_temp_email()
    print(f"üì© –ü–æ–ª—É—á–µ–Ω–∞ –≤—Ä–µ–º–µ–Ω–Ω–∞—è –ø–æ—á—Ç–∞: {email}")

    # 2. –ó–∞–ø—Ä–∞—à–∏–≤–∞–µ–º –Ω–æ–º–µ—Ä –¥–ª—è SMS
    phone_number, sms_service = get_sms_code()
    if not phone_number:
        print("‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–ª—É—á–∏—Ç—å –Ω–æ–º–µ—Ä. –ü—Ä–æ–±—É–µ–º –¥—Ä—É–≥–æ–π —Å–µ—Ä–≤–∏—Å...")
        return

    print(f"üìû –ü–æ–ª—É—á–µ–Ω –Ω–æ–º–µ—Ä: {phone_number} (—á–µ—Ä–µ–∑ {sms_service})")

    # 3. –û—Ç–ø—Ä–∞–≤–ª—è–µ–º –∑–∞–ø—Ä–æ—Å –Ω–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—é
    session = requests.Session()
    session.proxies.update(PROXIES)

    data = {
        "email": email,
        "phone": phone_number,
        "username": generate_random_name(),
        "password": "Qwerty1234!"
    }

    response = session.post(SERVICES[service_name]["register_url"], json=data)

    if response.status_code == 200:
        print(f"‚úÖ –ó–∞–ø—Ä–æ—Å –Ω–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—é –æ—Ç–ø—Ä–∞–≤–ª–µ–Ω! –ñ–¥—ë–º SMS-–∫–æ–¥...")

        # 4. –û–∂–∏–¥–∞–µ–º SMS-–∫–æ–¥
        sms_code = None
        for _ in range(10):  
            sms_code = get_sms_code(phone_number)
            if sms_code:
                print(f"üì≤ –ü–æ–ª—É—á–µ–Ω SMS-–∫–æ–¥: {sms_code}")
                break
            time.sleep(5)

        if not sms_code:
            print("‚ùå –ù–µ —É–¥–∞–ª–æ—Å—å –ø–æ–ª—É—á–∏—Ç—å SMS-–∫–æ–¥. –ü—Ä–µ—Ä—ã–≤–∞—é —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—é.")
            return

        # 5. –ü–æ–¥—Ç–≤–µ—Ä–∂–¥–∞–µ–º —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—é
        confirm_data = {"code": sms_code}
        confirm_response = session.post(SERVICES[service_name]["confirm_url"], json=confirm_data)

        if confirm_response.status_code == 200:
            print(f"üéâ –ê–∫–∫–∞—É–Ω—Ç {service_name} —É—Å–ø–µ—à–Ω–æ –∑–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞–Ω!")
        else:
            print("‚ùå –û—à–∏–±–∫–∞ –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏.")

    else:
        print("‚ùå –û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ –∑–∞–ø—Ä–æ—Å–∞.")

if __name__ == "__main__":
    for service in SERVICES.keys():
        register_service(service)
